---
interface Props {
  title?: string;
}

const { title = "" } = Astro.props;
---

<html lang="th">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title ? title + " — " : title}My common pattern — @rootEnginear</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html {
    color-scheme: dark;
  }
</style>